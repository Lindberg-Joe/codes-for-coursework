package test;
import java.util.Scanner;
import java.util.Arrays;
public class test{
    public static void main(String[] args)
        {
            double a[]={12,34,9,-23,45,6,90,123,19,45,34};//11
            Arrays.sort(a);
            for(int i=0;i<11;i++)
            {
                System.out.println(a[i]);
            }
            int flag;
            flag=binarySearch(a,9);
            if(flag==-1) System.out.println("Number not found");
            else System.out.println("Number found at "+flag);
        }
    public static int binarySearch(double[] arr,int key)
        {
                 int min = 0;
                 int max = arr.length - 1;
                 int mid = 0;
                 while(min <= max) {
                         mid = (min+max)/2;
                         if(key>arr[mid]) {
                                 min = mid +1;
                             }else if(key <arr[mid]) {
                                 max = mid -1;
                             }else {
                                 return mid;
                             }
                     }
                 return -1;
        }
}
