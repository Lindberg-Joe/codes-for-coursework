interface Shape
{
    public abstract  double getArea();
    public abstract  double getPerimeter();
}

class Coordinates {
    long x;
    long y;
    public Coordinates (long x, long y)
    {
        this.x=x;
        this.y=y;
    }
}
class Rectangle extends Coordinates implements Shape {
    int length;
    int width;
    public Rectangle(int x,int y,int a,int b)
    {
        super((long)x,(long)y);
        this.length=a;
        this.width=b;
    }
    public double getArea()
    {
        return this.length*this.width;
    }
    public double getPerimeter()
    {
        return 2*this.width+2*this.length;
    }
}

class Circle extends Coordinates implements Shape {
    double radius;
    public Circle(int x,int y,int r)
    {
        super((long)x,(long)y);
        this.radius=r;
    }
    public double getArea()
    {
        return this.radius*this.radius*Math.PI;
    }
    public double getPerimeter()
    {
        return 2*this.radius*Math.PI;
    }
}

class Triangle extends Coordinates implements Shape {
    int edge1;
    int edge2;
    int edge3;
    public Triangle(int x,int y,int a,int b,int c)
    {
        super((long)x,(long)y);
        this.edge1=a;
        this.edge2=b;
        this.edge3=c;
    }
    public double getArea()
    {
        double p=(this.edge1+this.edge2+this.edge3)/2;
        return Math.sqrt(p*(p-this.edge1)*(p-this.edge2)*(p-this.edge3));
    }
    public double getPerimeter()
    {
        return this.edge1+this.edge2+this.edge3;
    }
}
