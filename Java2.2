class MyDate {
    int year,mouth,day;
    int flag=0;
    public MyDate(int y,int m,int d)
    {
        flag = 0;
        if(m<=12) {
            switch (m) {
                case 1:
                case 3:
                case 5:
                case 7:
                case 8:
                case 10:
                case 12:
                    if (d > 31) {
                        System.out.println("Illegal");
                        flag = 1;
                    }
                    break;
                case 4:
                case 6:
                case 9:
                case 11:
                    if (d > 30) {
                        System.out.println("Illegal");
                        flag = 1;
                    }
                    break;
                case 2:
                    if ((y % 100 != 0 && y % 4 == 0) || y % 400 == 0) {
                        if (d > 29) {
                            System.out.println("Illegal");
                            flag = 1;
                        }
                    } else if (d > 28) {
                        System.out.println("Illegal");
                        flag = 1;
                    }
                    break;
            }
        }
        else {System.out.println("Illegal"); flag=1;}
        if (flag == 0) {
            this.year = y;
            this.mouth = m;
            this.day = d;
        }
    }
}

