       private void button1_Click(object sender, EventArgs e)//生成数据
        {
            Random random = new Random();
            for (int i = 0; i < 100; i++)
            {
                str = string.Empty;
                arr[i] = new int[8];
                for (int j = 0; j < 8; j++)
                {
                    arr[i][j] = (random.Next() % 2);
                    str += arr[i][j];
                }
                ListViewItem l1 = new ListViewItem();
                l1.Text = counter.ToString();
                l1.SubItems.Add(str);
                l1.SubItems.Add("0");
                counter++;
                listView1.Items.Add(l1);
            }
        }//button1

