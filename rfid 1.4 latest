        private void button6_Click_1(object sender, EventArgs e)//CRC
        {
            Random random = new Random();
            for (int i = 0; i < 100; i++)
            {
                str = string.Empty;
                arr[i] = new int[11];
                b[i] = new int[11];
                for (int j = 0; j < 8; j++)
                {
                    arr[i][j] = (random.Next() % 2);
                    b[i][j] = arr[i][j];
                    str += arr[i][j];
                }
                arr[i][10] = 0;
                arr[i][9] = 0;
                arr[i][8] = 0;
                b[i][10] = 0;
                b[i][9] = 0;
                b[i][8] = 0;
                ListViewItem l1 = new ListViewItem();
                l1.Text = counter.ToString();
                l1.SubItems.Add(str);
                counter++;
                listView6.Items.Add(l1);
            }
        }

        private void button4_Click(object sender, EventArgs e)//CRC
        {
            String st=String.Empty;
            int[] res = new int[4];
            int[] diver = new int[4];
            diver[0] = 1; diver[1] = 1;
            diver[2] = 1; diver[3] = 1;
            int j = 0;
           // int[] crc = new int[3];
            for(int i=0;i<100;i++)
            {
                crcp[i] = new int[3];
                st = String.Empty;
                j = 0;
                while(j<11)
                 {
                    if (j == 7)
                    {
                        if (arr[i][j] == 1)
                        {
                            for (int k = 1; k < 4; k++)
                            {
                                crcp[i][k - 1] = (arr[i][j + k] + diver[k]) % 2;
                                st += crcp[i][k - 1].ToString();
                            }//for k 3
                        }
                        else
                        {
                            for (int k = 1; k < 4; k++)
                            {
                                crcp[i][k - 1] = arr[i][j + k];
                                st += crcp[i][k - 1].ToString();
                            }//for k 3
                        }
                        break;
                    }
                    if (arr[i][j] == 0) { j++; continue; }
                    else
                    {
                        for (int k = 0; k < 4; k++)
                        {
                            res[k] = (arr[i][j + k] + diver[k]) % 2;
                            arr[i][j + k] = res[k];
                        }//for k 4
                    }//else
                    j++;
                }//while
                ListViewItem l1 = new ListViewItem();
                l1.Text = i.ToString();
                l1.SubItems.Add(st);
                listView4.Items.Add(l1);
            }//for i 100
        }

        private void button8_Click(object sender, EventArgs e)//奇偶校验接收
        {
            int[] flag2 = new int[100];
            Random random = new Random();
            float sum = 0;
            for (int i = 0; i < 100; i++)//1/100的出错率
            {
                for (int j = 0; j < 8; j++)
                {
                    int f = random.Next() % 100;
                    if (f == 50) { arr[i][j] = 1; flag2[i] = 1; }
                    else flag2[i] = 0;
                }
            }
            int count1 = 0;
            int flag = 1000;
            for (int i = 0; i < 100; i++)
            {
                count1 = 0;
                for (int j = 0; j < 8; j++)
                {
                    if (arr[i][j] == 1) { count1++; }
                }
                ListViewItem l2 = new ListViewItem();
                l2.Text = i.ToString();
                str = string.Empty;
                for (int j = 0; j < 8; j++)
                {
                    str += arr[i][j];
                }
                l2.SubItems.Add(str);
                flag = count1 % 2;
                if (flag == 0) { l2.SubItems.Add("0"); }
                else { l2.SubItems.Add("1"); }
                if (flag == arr[i][8] && flag2[i] == 0) l2.SubItems.Add("√");
                else if (flag != arr[i][8]) { l2.SubItems.Add("×"); sum++; }
                else if (flag == arr[i][8] && flag2[i] == 1) { l2.SubItems.Add("实际有误"); sum++; }
                listView8.Items.Add(l2);
            }
            sum = 100-sum;
            sum /= 100;
            textBox2.Text = "正确率："+sum.ToString();
        }

        private void button9_Click(object sender, EventArgs e)//海明校验
        {
            float esum = 0;
            int flag3 = 1000;
            int r1 = 0, r2 = 0, r3 = 0, r4 = 0;
            Random random = new Random();
            for (int i = 0; i < 100; i++)//1/100的出错率
            {
                flag3 = 0;
                for (int j = 0; j < 12; j++)
                {
                    int f = random.Next() % 100;
                    if (f == 50) { arr[i][j] = 1; }
                }
                ListViewItem l2 = new ListViewItem();
                l2.Text = i.ToString();
                str = string.Empty;
                for (int j = 0; j < 12; j++)
                {
                    str += arr[i][j];
                }
                l2.SubItems.Add(str);
                r1 = (arr[i][0] + arr[i][2] + arr[i][4] + arr[i][6] + arr[i][8] + arr[i][10]) % 2;
                r2 = (arr[i][1] + arr[i][2] + arr[i][5] + arr[i][6] + arr[i][9] + arr[i][10]) % 2;
                r3 = (arr[i][3] + arr[i][4] + arr[i][5] + arr[i][6] + arr[i][11]) % 2;
                r4 = (arr[i][7] + arr[i][8] + arr[i][9] + arr[i][10] + arr[i][11]) % 2;
                int sum = 0;
                sum = r1 + r2 + r3 + r4;
                if (sum == 0) l2.SubItems.Add("√");
                else
                {
                    l2.SubItems.Add("×"); esum++;
                    sum = r4 * 8 + r3 * 4 + r2 * 2 + r1 * 1;
                    arr[i][sum - 1] = 1 - arr[i][sum - 1];
                    flag3 = 1;
                }
                if (flag3 == 1)
                {
                    str = string.Empty;
                    for (int j = 0; j < 12; j++)
                    {
                        str += arr[i][j];
                    }
                    l2.SubItems.Add(str);
                }
                l2.SubItems.Add(sum.ToString()); 
                listView9.Items.Add(l2);
            }
            esum = 1 - esum / 100;
            textBox3.Text = "正确率："+esum.ToString();
        }

        private void button10_Click(object sender, EventArgs e)//CRC
        {
            String st = String.Empty;
            int ef = 0;
            float  ec = 0;
            Random random = new Random();
            for (int i = 0; i < 100; i++)//1/100的出错率
            {       
                ef = 0;
                for (int k = 0; k < 8; k++)
                {
                    int f = random.Next() % 100;
                    if (f == 50) { b[i][k] = 1 - b[i][k]; }
                }
                str = string.Empty;
                for (int k = 0; k < 8; k++)
                {
                    str += b[i][k];
                }
                int[] res = new int[4];
                int[] diver = new int[4];
                diver[0] = 1; diver[1] = 1;
                diver[2] = 1; diver[3] = 1;
                int j = 0;
                int[] crc = new int[3];
                    st = String.Empty;//生成校验码
                    j = 0;
                    while (j < 11)
                    {
                        if (j == 7)
                        {
                            if (b[i][j] == 1)
                            {
                                for (int k = 1; k < 4; k++)
                                {
                                    crc[k - 1] = (b[i][j + k] + diver[k]) % 2;
                                    st += crc[k - 1].ToString();
                                }//for k 3
                            }
                            else
                            {
                                for (int k = 1; k < 4; k++)
                                {
                                    crc[k - 1] = b[i][j + k];
                                    st += crc[k - 1].ToString();
                                }//for k 3
                            }
                            break;
                        }
                        if (b[i][j] == 0) { j++; continue; }
                        else
                        {
                            for (int k = 0; k < 4; k++)
                            {
                                res[k] = (b[i][j + k] + diver[k]) % 2;
                                b[i][j + k] = res[k];
                            }//for k 4
                        }//else
                        j++;
                     }//while
                    for (int k=0;k<3;k++)
                    {
                        if (crcp[i][k] == crc[k]) continue;
                        else
                        {
                            ef = 1;
                            break;
                        }
                    }
                    ListViewItem l2 = new ListViewItem();
                    l2.Text = i.ToString();
                    l2.SubItems.Add(str);
                    l2.SubItems.Add(st);
                if (ef == 1) { l2.SubItems.Add("×"); ec++; }
                else l2.SubItems.Add("√");
                    listView10.Items.Add(l2);
            }
            ec = (100 - ec) / 100;
            textBox5.Text = "正确率："+ec.ToString();
        }

    }//Form1

}//namespace

